<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Register' }) %>
<body>
  <%- include('partials/navbar', { user }) %>
  <div class="container" id="main-content">
    <%- include('partials/banner') %>
    <div class="row center-text align-items-center justify-content-center">
      <div class="shadow-lg col-md-8 m-3 p-3 bg-white">
        <form action="/register" method="post">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" placeholder="Username" required></label>
          </div>
          <div class="form-group">
            <label for="email">E-Mail</label>
            <input type="email" name="email" class="form-control" placeholder="E-Mail" required></label>
          </div>
          <div class="form-group">
            <label for="pass">Password</label>
            <input type="password" name="pass" class="form-control" placeholder="Password" required>
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>