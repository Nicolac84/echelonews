<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Login' }) %>
<body>
  <%- include('partials/navbar', { user }) %>
  <div class="container" id="main-content">
    <%- include('partials/banner') %>
    <div class="container">
      <div class="shadow-lg p-3 mb-5 bg-white">
        <div class="row center-text align-items-center justify-content-center">
          <form class="full-size-form" action="/login" method="post">
            <h1>Login</h1>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="name" class="form-control" placeholder="Username" required></label>
            </div>
            <div class="form-group">
              <label for="pass">Password</label>
              <input type="password" name="pass" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/oauth" class="google-button">
              <img src="/img/google-button.png" alt="Sign in with Google">
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>