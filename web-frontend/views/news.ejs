<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'News' }) %>
<body>
  <%- include('partials/navbar', { user }) %>
  <div class="container">
    <%- include('partials/banner') %>
    <div class="container">
      <div class="shadow-lg p-3 mb-5 bg-white">
        <div class="row">
          <div class="col-sm">
            <div class="card" style="width: 18rem;">
              <img src="img/worldnews.jpg" class="card-img-top" alt="...">
              <div class="card-body">
                <form action="/news" method="post" name="news">
                  <div class="form-group">
                    <label for="name">Topic</label>
                    <input type="text" name="topic" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="lang">Language</label>
                    <select name="lang">
                      <% for (const l of langs) { %>
                        <option value="<%= l.code %>">
                          <%= l.name %>
                        </option>
                      <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="countries">Paesi</label>
                      <ul class="list-group list-group-flush" id="countries-list">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                          <select class="col-sm-10">
                            <% for (const c of countries) { %>
                              <option value="<%= c.code %>">
                                <%= c.name %> (<%= c.native %>)
                              </option>
                            <% } %>
                          </select>
                          <span class="badge badge-primary" id="countries-add">Add</span>
                        </li>
                      </ul>
                      <input type="hidden" name="countries">
                  </div>
                  <button class="btn btn-primary" type="submit">Cerca</button>
                </form>
              </div>
            </div>
          </div>
    
      <div class="col-8">
        <div class="container">
          <div style="width:100% ;height: 400px; overflow-x: scroll; overflow-y: scroll;border:1px solid black;">
            <input type="text" onkeyup="myFunction()" placeholder="Search for News..">
            <table class="table">
              <thead>
                <tr class="header">
                  <th scope="col">Title</th>
                  <th scope="col">Preview</th>
                  <th scope="col">Country</th>
                  <th scope="col">Data</th>
                  <th scope="col">Indice</th>
                </tr>
              </thead>
            <tr>
              <% news.forEach(function(item){ %>
                <td><a href="<%= item.origin %>"><%= item.title %></a></td>
                <td><%= item.npaper.country %></td>
                <td><%= item.created %></td>
                <td><%= item.translatedTitle %></td>
              <% }) %>
            </tr>
            </table>
          </div>
        </div><br>
        <br>
        <div class="container">
          <div class="btn-group btn-group-lg">
            <button type="button" class="btn btn-primary">Lista</button> <button type="button" class="btn btn-primary">Analisi</button> <button type="button" class="btn btn-primary">Vota</button>
          </div>
        </div>
      </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
